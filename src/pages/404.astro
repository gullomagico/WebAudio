---
import '../main.css';
import Card from '../components/Card.astro';
---

<!DOCTYPE html>
<html lang="en" class="bg-gray-900">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`} />
		<meta name="generator" content={Astro.generator} />
		<title>404 Not found - WebAudio</title>
	</head>
	<body>
		<main class="m-auto p-6 select-none">
            <h1 class="text-4xl font-bold text-center text-gradient">
                &lt;404 Not found /&gt; 
            </h1>
            <p class="text-center text-gray-400 mt-5">
                The page you are looking for does not exist.
            </p>
            <ul class="max-w-xs text-center mx-auto mt-10">
                <Card
                    href={`${import.meta.env.BASE_URL}`}
                    title="Home"
                    body="Go back to the home page."
                />
            </ul>
		</main>
	</body>
</html>